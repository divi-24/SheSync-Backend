{
  "info": {
    "name": "Community API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Community → Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Women's Health\",\n  \"description\": \"A safe space to discuss menstrual health, hygiene, and well-being\",\n  \"category\": \"Health\"\n}"
        },
        "url": "{{baseUrl}}/api/communities"
      }
    },
    {
      "name": "Community → Get All",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{baseUrl}}/api/communities"
      }
    },
    {
      "name": "Community → Get By ID",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{baseUrl}}/api/communities/{{communityId}}"
      }
    },
    {
      "name": "Community → Update",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"description\": \"Updated description for Women's Health community\"\n}"
        },
        "url": "{{baseUrl}}/api/communities/{{communityId}}"
      }
    },
    {
      "name": "Community → Delete",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{baseUrl}}/api/communities/{{communityId}}"
      }
    },
    {
      "name": "Community → Join",
      "request": {
        "method": "POST",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{baseUrl}}/api/communities/{{communityId}}/join"
      }
    },
    {
      "name": "Community → Leave",
      "request": {
        "method": "POST",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{baseUrl}}/api/communities/{{communityId}}/leave"
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000" },
    { "key": "token", "value": "" },
    { "key": "communityId", "value": "" }
  ]
}
